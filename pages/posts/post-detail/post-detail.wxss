.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 750rpx;
  height: 460rpx;
}
.audio{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  margin-left: -50rpx;
  top: 180rpx;
  opacity: .6;
}
.author-data{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
  line-height: 64rpx;
}
.avatar{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.date{
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.const-text{
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}
.title{
  margin-left: 40rpx;
  font-size: 36rxp;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width: 90rpx;
  height: 90rpx;
  background-color: #0061D2;
  border-radius: 50%;
  padding: 20rpx;
  box-sizing: border-box;
}
.share-img{
  margin-left: 30rpx;
  background-color: #399EBA !important;
}
.circle-img .collected{
  background-color: #ddd !important;
}
.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.detail{
  color: #666;
  margin: 20rpx 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}